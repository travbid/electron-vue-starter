{
	"name": "electron-vue-starter",
	"version": "0.1.0",
	"description": "A template project combining Electron, Vue, Typescript, and Node Native Add-Ons",
	"private": true,
	"license": "MIT",
	"homepage": "https://github.com/electron/electron",
	"main": "app/main.js",
	"scripts": {
		"serve": "vue-cli-service serve",
		"dev": "set NODE_ENV=development && yarn rebuild && concurrently \"vue-cli-service serve\" \"yarn build-main && electron ./dist/app/main.js\"",
		"build": "set NODE_ENV=production && vue-cli-service build src/renderer/main.ts && set NODE_ENV=production && yarn build-main",
		"build-main": "set NODE_ENV=production && webpack --config ./configs/webpack.main.ts --colors",
		"pkg": "set NODE_ENV=production && yarn build && electron-builder build --publish never",
		"test:unit": "vue-cli-service test:unit",
		"lint": "vue-cli-service lint",
		"rebuild": "yarn electron-rebuild -m ./src/main/native",
		"postinstall": "electron-builder install-app-deps && yarn rebuild"
	},
	"build": {
		"productName": "ElectronVueStarter",
		"appId": "com.your.AppId",
		"files": [
			{
				"from": "dist/",
				"to": "."
			},
			"node_modules/",
			"package.json"
		],
		"directories": {
			"buildResources": "resources",
			"output": "release"
		},
		"win": {
			"target": [
				"portable"
			]
		},
		"asar": false
	},
	"dependencies": {
		"core-js": "latest",
		"electron-devtools-installer": "latest",
		"electron-log": "latest",
		"electron-updater": "^4.0.0",
		"vue": "latest",
		"vue-class-component": "latest",
		"vue-property-decorator": "latest",
		"vue-router": "latest",
		"vuex": "latest"
	},
	"devDependencies": {
		"@babel/core": "latest",
		"@babel/preset-env": "latest",
		"@babel/preset-typescript": "latest",
		"@babel/register": "latest",
		"@types/chai": "latest",
		"@types/copy-webpack-plugin": "latest",
		"@types/electron-devtools-installer": "latest",
		"@types/mocha": "latest",
		"@types/node": "latest",
		"@types/source-map-support": "latest",
		"@types/terser-webpack-plugin": "latest",
		"@types/webpack": "latest",
		"@types/webpack-merge": "latest",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"@vue/cli-plugin-babel": "latest",
		"@vue/cli-plugin-eslint": "latest",
		"@vue/cli-plugin-router": "latest",
		"@vue/cli-plugin-typescript": "latest",
		"@vue/cli-plugin-unit-mocha": "latest",
		"@vue/cli-plugin-vuex": "latest",
		"@vue/cli-service": "latest",
		"@vue/eslint-config-typescript": "latest",
		"@vue/test-utils": "latest",
		"babel-loader": "latest",
		"chai": "latest",
		"concurrently": "latest",
		"electron": "latest",
		"electron-builder": "latest",
		"electron-debug": "latest",
		"electron-rebuild": "latest",
		"eslint": "latest",
		"eslint-plugin-vue": "latest",
		"node-loader": "latest",
		"script-ext-html-webpack-plugin": "latest",
		"stylus": "latest",
		"stylus-loader": "latest",
		"terser-webpack-plugin": "latest",
		"typescript": "latest",
		"vue-template-compiler": "latest",
		"webpack": "latest",
		"webpack-cli": "latest"
	}
}
